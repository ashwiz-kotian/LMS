<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".userlogin">

    <ImageView
        android:id="@+id/userBack_id"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/main1"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <EditText
        android:id="@+id/useremail"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/recatngle_3"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textAlignment="viewStart"
        android:textColorHint="#EFDCDC"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.272" />

    <EditText
        android:id="@+id/userpassword"
        android:layout_width="330dp"
        android:layout_height="72dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/recatngle_3"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHint="#ECE4E4"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.413"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

    <View
        android:id="@+id/line_1"
        android:layout_width="328dp"
        android:layout_height="3dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/line_1"
        app:layout_constraintBottom_toBottomOf="@+id/useremail"
        app:layout_constraintEnd_toEndOf="@+id/useremail"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="@+id/useremail"
        app:layout_constraintTop_toTopOf="@+id/useremail"
        app:layout_constraintVertical_bias="0.816" />

    <View
        android:id="@+id/line_2"
        android:layout_width="328dp"
        android:layout_height="3dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/line_2"
        app:layout_constraintBottom_toBottomOf="@+id/userpassword"
        app:layout_constraintEnd_toEndOf="@+id/userpassword"
        app:layout_constraintHorizontal_bias="0.423"
        app:layout_constraintStart_toStartOf="@+id/userpassword"
        app:layout_constraintTop_toTopOf="@+id/userpassword"
        app:layout_constraintVertical_bias="0.859" />

    <ImageView
        android:id="@+id/vector"
        android:layout_width="32dp"
        android:layout_height="25dp"
        android:background="@drawable/useremail"
        app:layout_constraintBottom_toBottomOf="@+id/useremail"
        app:layout_constraintEnd_toEndOf="@+id/useremail"
        app:layout_constraintHorizontal_bias="0.931"
        app:layout_constraintStart_toStartOf="@+id/useremail"
        app:layout_constraintTop_toTopOf="@+id/useremail"
        app:layout_constraintVertical_bias="0.434"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/vector2"
        android:layout_width="29dp"
        android:layout_height="32dp"
        android:background="@drawable/userpassword"
        app:layout_constraintBottom_toBottomOf="@+id/line_2"
        app:layout_constraintEnd_toEndOf="@+id/userpassword"
        app:layout_constraintHorizontal_bias="0.953"
        app:layout_constraintStart_toStartOf="@+id/userpassword"
        app:layout_constraintTop_toTopOf="@+id/userpassword"
        app:layout_constraintVertical_bias="0.307"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/userloginbtn"
        android:layout_width="208dp"
        android:layout_height="74dp"
        android:backgroundTint="#FDA403"
        android:text="LOGIN"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.418"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.707" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="300dp"
        android:layout_height="44dp"
        android:text="STUDENT LOGIN"
        android:textAlignment="center"
        android:textColor="#FDA403"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.459"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.08" />

</androidx.constraintlayout.widget.ConstraintLayout>